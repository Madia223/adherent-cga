<odoo>
    <data>

        <!-- Vue Liste Paiements Fiscaux -->
        <record id="view_fiscal_payment_tree" model="ir.ui.view">
            <field name="name">fiscal_payment_tree</field>
            <field name="model">fiscal.payment</field>
            <field name="arch" type="xml">
                <list string="Paiements Fiscaux">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="echeance_id"/>
                    <field name="amount" widget="monetary"/>
                    <field name="payment_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Vue Formulaire Paiements Fiscaux -->
        <record id="view_fiscal_payment_form" model="ir.ui.view">
            <field name="name">fiscal_payment_form</field>
            <field name="model">fiscal.payment</field>
            <field name="arch" type="xml">
                <form string="Paiement Fiscal">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="echeance_id"/>
                            <field name="amount" widget="monetary"/>
                            <field name="payment_date"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour afficher les Paiements Fiscaux -->
        <record id="action_fiscal_payment" model="ir.actions.act_window">
            <field name="name">Paiements Fiscaux</field>
            <field name="res_model">fiscal.payment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Paiements Fiscaux -->
        <menuitem id="menu_fiscal_payment" name="Paiements Fiscaux" parent="menu_adhesion"
                  action="action_fiscal_payment" sequence="30"/>

    </data>
</odoo>


