<odoo>
    <data>
        <record id="echeance_list_view" model="ir.ui.view">
            <field name="name">echeance.list</field>
            <field name="model">echeance</field>
            <field name="arch" type="xml">
                <list>
                    <header>
                        <button name="check_expired_echeance"
                                string="Mettre à jour les status"
                                type="object"
                                class="btn-primary"
                                icon="fa-refresh"/>
                    </header>
                    <field name="adherent_id"/>
                    <field name="obligation"/>
                    <field name="state"/>
                    <field name="date_echeance"/>
                    <field name="days_late"/>
                </list>
            </field>
        </record>


        <record id="echeance_form_view" model="ir.ui.view">
            <field name="name">echeance.form</field>
            <field name="model">echeance</field>
            <field name="arch" type="xml">
                <form>
<!--                    <header>-->
<!--                        <button name="check_expired_echeance"-->
<!--                                string="Mettre à jour les status"-->
<!--                                type="object"-->
<!--                                class="btn-primary"-->
<!--                                icon="fa-refresh"/>-->
<!--                    </header>-->
                    <sheet>
                        <group>

                            <group>
                                <field name="adherent_id"/>
                                <field name="obligation" domain="[('regime_id', '=', regime_id)]"/>
                                <field name="date_echeance" readonly="1"/>
                            </group>
                            <group>
                                <field name="regime_id" readonly="1"/>
                                <field name="state" readonly="1"/>
                                <field name="days_late" readonly="1"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>


       <record id="echeance_kanban_view" model="ir.ui.view">
            <field name="name">echeance.kanban</field>
            <field name="model">echeance</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="state"/>
                    <field name="adherent_id"/>
                    <field name="obligation"/>
                    <field name="date_echeance"/>
                    <field name="days_late"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="o_kanban_record o_kanban_record_has_shadow
                                    #{record.state.raw_value === 'to_pay' ? 'bg-light-warning' : ''}
                                    #{record.state.raw_value === 'paid' ? 'bg-light-success' : ''}
                                    #{record.state.raw_value === 'late' ? 'bg-light-danger' : ''}"
                                 style="margin-bottom: 8px; border-radius: 8px;">


                                <div class="o_kanban_record_top" style="padding: 12px 16px 0;">
                                    <div class="o_kanban_record_title" style="display: flex; align-items: center;">
                                        <field name="adherent_id" widget="many2one_avatar"/>
                                        <field name="obligation" style="margin-left: 8px; font-weight: 500;"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body" style="padding: 8px 16px;">
                                    <div style="display: flex; justify-content: space-between;">
                                        <span>Échéance: </span>
                                        <field name="date_echeance" style="font-weight: 600;"/>
                                    </div>
                                    <div t-if="record.days_late.raw_value > 0">
                                        <span>Retard: </span>
                                        <field name="days_late" style="font-weight: 600;"/> jours
                                    </div>
                                </div>
                                <div class="oe_kanban_footer" style="padding: 0 16px 12px; margin-top: 8px;">
                                    <field name="state" widget="selection_badge"
                                           style="width: 100%; justify-content: center;"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>

