<odoo>
    <data>

        <!-- Vue Formulaire -->
        <record id="view_fiscal_echeance_form" model="ir.ui.view">
            <field name="name">fiscal_echeance_form</field>
            <field name="model">fiscal.echeance</field>
            <field name="arch" type="xml">
                <form string="Échéance Fiscale">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="regime_id"/>
                            <field name="taxe_id"/>
                            <field name="deadline"/>
                            <field name="paiement_effectue"/>
                            <field name="payment_date"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <footer>
                            <button name="action_marquer_comme_paye"
                                    type="object"
                                    string="Marquer comme payé"
                                    class="btn-success"
                                    groups="adherent-cga.group_fiscal_user"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Liste -->
        <record id="view_fiscal_echeance_tree" model="ir.ui.view">
            <field name="name">fiscal_echeance_tree</field>
            <field name="model">fiscal.echeance</field>
            <field name="arch" type="xml">
                <list string="Échéances Fiscales" default_order="deadline asc">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="taxe_id"/>
                    <field name="deadline" widget="date"/>
                    <field name="state"/>
                    <field name="paiement_effectue"/>
                </list>
            </field>
        </record>

        <!-- Vue Calendrier -->
        <record id="view_fiscal_echeance_calendar" model="ir.ui.view">
            <field name="name">fiscal_echeance_calendar</field>
            <field name="model">fiscal.echeance</field>
            <field name="arch" type="xml">
                <calendar string="Calendrier Fiscal"
                          date_start="deadline"
                          color="partner_id"
                          mode="month">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Vue Kanban -->
        <record id="view_fiscal_echeance_kanban" model="ir.ui.view">
            <field name="name">fiscal_echeance_kanban</field>
            <field name="model">fiscal.echeance</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_example">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card" t-attf-class="state-#{record.state.raw_value}">
                                <div class="o_kanban_details">
                                    <strong><field name="name"/></strong><br/>
                                    <span>Adhérent : <field name="partner_id"/></span><br/>
                                    <span>Échéance : <field name="deadline" widget="date"/></span><br/>
                                    <span>Statut : <field name="state"/></span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>


