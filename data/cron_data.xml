        <record id="ir_cron_check_echeances" model="ir.cron">
            <field name="name">Vérification des échéances expirées</field>
            <field name="model_id" ref="adherent-cga.model_echeance"/>
            <field name="state">code</field>
            <field name="code">model.check_expired_echeance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>


        <!-- Cron optionnel : envoi des mails aux adhérents -->
        <record id="ir_cron_send_adherent_mail" model="ir.cron">
            <field name="name">Envoi Email aux Adhérents</field>
            <field name="model_id" ref="adherent-cga.model_echeance"/>
            <field name="state">code</field>
            <field name="code">model.send_monthly_echeance_reminders()</field>
            <field name="interval_number">1</field> <!-- chaque jours -->
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron optionnel : envoi des mails aux adhérents en cas de retard de paiement -->
        <record id="ir_cron_send_late_echeance_mail" model="ir.cron">
            <field name="name">Envoi Email de retard aux Adhérents</field>
            <field name="model_id" ref="adherent-cga.model_echeance"/>
            <field name="state">code</field>
            <field name="code">model.send_late_mail()</field>
            <field name="interval_number">1</field> <!-- tous les jours -->
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>


    </data>
