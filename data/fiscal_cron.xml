<odoo>
    <data noupdate="0">
        <record id="ir_cron_notify_fiscal_echeances" model="ir.cron">
            <field name="name">Notification Échéances Fiscales</field>
            <field name="model_id" ref="model_fiscal_echeance"/>
            <field name="state">code</field>
            <field name="code">model._cron_notify_upcoming_echeances()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active">True</field>
        </record>
        <!-- Assurez-vous que tous les commentaires sont correctement formatés -->
    </data>
</odoo>



